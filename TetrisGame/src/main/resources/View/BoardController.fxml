<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<Pane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.attila.main.UIController">
    <GridPane fx:id="shapePanel" styleClass="shapePanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutX="470" layoutY="60" />
        </center>
    </BorderPane>
    <VBox styleClass="controllPanel" alignment="BOTTOM_LEFT" prefHeight="400"
            layoutY="350" layoutX="20">
        <TextField fx:id="Username" promptText="Username" />
        <Button fx:id="newGameButton" onAction="#newGame" prefHeight="50" prefWidth="120" text="New Game" />
        <Button prefHeight="50" prefWidth="120" text="Controls" />
        <Button prefHeight="50" prefWidth="120" text="Scoreboard" />
        <Button fx:id="exitButton" onAction="#onExitButton" prefHeight="50" prefWidth="120" text="Exit" />
    </VBox>
    <VBox layoutX="250">
        <BorderPane styleClass="nextShape" maxWidth="150" prefWidth="100" prefHeight="100">
            <center>
                <GridPane fx:id="nextShapePane" hgap="1" vgap="1"  />
            </center>
        </BorderPane>
    </VBox>
    <VBox layoutX="250" layoutY="100">
        <Label text="Score: " />
        <Text text=" " fx:id="scoreValue"/>
    </VBox>
    <stylesheets >
        <URL value="@game_style.css" />
    </stylesheets>
</Pane>